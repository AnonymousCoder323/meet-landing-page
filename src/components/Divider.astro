---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={`flex flex-col items-center gap-0 ${className}`}>
  <div class='h-[5rem] w-[.0625rem] bg-slate-300'></div>
  <div
    class='grid h-[3.5rem] w-[3.5rem] place-content-center rounded-full border border-slate-300 bg-white font-black text-slate-600'
  >
    <slot />
  </div>
</div>
